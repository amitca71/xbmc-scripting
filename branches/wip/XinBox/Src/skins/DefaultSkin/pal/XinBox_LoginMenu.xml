<window>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<control type="image">
			<description>Background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>XBbackground-bottom.png</texture>
		</control>
		<control type="image">
			<description>Menu Open</description>
			<posx>153</posx>
			<posy>60</posy>
			<width>400</width>
			<height>63</height>
			<texture>XBmenu-top.png</texture>
			<animation effect="slide" start="0,100" time="800">WindowOpen</animation>
			<animation effect="slide" end="0,100" time="800">WindowClose</animation>
		</control>
		<control type="image">
			<description>XinBox Logo image</description>
			<posx>160</posx>
			<posy>45</posy>
			<width>120</width>
			<height>120</height>
			<texture>XBXinBoXLogo.png</texture>
			<animation effect="slide" start="0,100" time="800">WindowOpen</animation>
			<animation effect="slide" end="0,100" time="800">WindowClose</animation>
		</control>
		<control type="image">
			<description>Menu Icon image</description>
			<posx>330</posx>
			<posy>60</posy>
			<width>65</width>
			<height>65</height>
			<texture>XBlogin.png</texture>
			<animation effect="slide" start="0,100" time="800">WindowOpen</animation>
			<animation effect="slide" end="0,100" time="800">WindowClose</animation>
		</control>
  		<control type="label" id="80">
        		<description>Menu Label</description>
        		<posx>440</posx>
        		<posy>95</posy>
        		<width>200</width>
        		<label>-</label>
        		<font>special13</font>
        		<textcolor>FFB2D4F5</textcolor>
			<animation effect="slide" start="0,100" time="800">WindowOpen</animation>
			<animation effect="slide" end="0,100" time="800">WindowClose</animation>
  		</control>		
		<control type="image">
			<description>Panel</description>
			<posx>140</posx>
			<posy>120</posy>
			<width>430</width>
			<height>450</height>
			<texture>XBmainmenu.png</texture>
		</control>
		<control type="list" id="50">
            	<posx>165</posx>
            	<posy>160</posy>
            	<width>400</width>
            	<height>370</height>
		<onleft>9000</onleft>
		<scrolltime>200</scrolltime>
		<animation effect="fade" time="800">WindowOpen</animation>
		<animation effect="fade" time="800">WindowClose</animation>
			<itemlayout height="70">
				<control type="image">
					<width>400</width>
					<height>70</height>
					<posx>0</posx>
					<posy>0</posy>
					<texture>XBlist-nofocus.png</texture>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>70</width>
					<height>70</height>
					<info>ListItem.Icon</info>
				</control>
				<control type="image">
					<posx>140</posx>
					<posy>100</posy>
					<width>32</width>
					<height>32</height>
					<info>ListItem.Overlay</info>
				</control>
				<control type="label">
					<posx>200</posx>
					<posy>20</posy>
					<width>330</width>
					<height>16</height>
					<align>center</align>
					<font>special13</font>
					<info>ListItem.Label</info>
				</control>
			</itemlayout>
			<focusedlayout height="70">
				<control type="image">
					<width>400</width>
					<height>70</height>
					<posx>0</posx>
					<posy>0</posy>
					<texture>XBlist-focus.png</texture>
					<visible>Control.HasFocus(50)</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>70</width>
					<height>70</height>
					<info>ListItem.Icon</info>
				</control>
				<control type="image">
					<posx>140</posx>
					<posy>100</posy>
					<width>32</width>
					<height>32</height>
					<info>ListItem.Overlay</info>
				</control>
				<control type="label">
					<posx>200</posx>
					<posy>20</posy>
					<width>330</width>
					<height>16</height>
					<align>center</align>
					<font>special13</font>
					<info>ListItem.Label</info>
				</control>
				<control type="label">
					<posx>320</posx>
					<posy>30</posy>
					<width>350</width>
					<height>16</height>
					<font>font13</font>
					<align>center</align>
					<info>ListItem.Label2</info>
				</control>
			</focusedlayout>
		</control>

    </controls>

</window>
