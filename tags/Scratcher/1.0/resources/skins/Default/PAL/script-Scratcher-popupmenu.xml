<window>
    <defaultcontrol>1000</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
	<controls>
        <control type="image">
            <description>background image</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>720</width>
            <height>576</height>
            <texture>script-popupmenu-fullscreen-mask.png</texture>
        </control>
        <control type="image" id="997">
            <description>background top image</description>
            <posx>0</posx>
            <posy>-5</posy>
            <width>150</width>
            <height>5</height>
            <texture>script-popupmenu-top.png</texture>
        </control>
        <control type="image" id="999">
            <description>background image</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>150</width>
            <texture>script-popupmenu-background.png</texture>
        </control>
		<control type="list" id="1000">
			<posx>0</posx>
			<posy>0</posy>
            <width>150</width>
            <height>20</height>
			<onleft>1000</onleft>
			<onright>1000</onright>
			<onup>1000</onup>
			<ondown>1000</ondown>
            <itemlayout height="20">
                <control type="image">
                    <posx>5</posx>
                    <posy>0</posy>
                    <width>20</width>
                    <height>20</height>
                    <aspectratio>keep</aspectratio>
                    <info>ListItem.Thumb</info>
                </control>
                <control type="label">
                    <posx>30</posx>
                    <posy>0</posy>
                    <width>110</width>
                    <textcolor>ff000000</textcolor>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout height="20">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>150</width>
                    <height>20</height>
                    <texture>script-popupmenu-item-focus.png</texture>
                </control>
                <control type="image">
                    <posx>5</posx>
                    <posy>0</posy>
                    <width>20</width>
                    <height>20</height>
                    <aspectratio>keep</aspectratio>
                    <info>ListItem.Thumb</info>
                </control>
                <control type="label">
                    <posx>30</posx>
                    <posy>0</posy>
                    <width>110</width>
                    <textcolor>ff000000</textcolor>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
        <control type="image" id="998">
            <description>background bottom image</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>150</width>
            <height>5</height>
            <texture>script-popupmenu-bottom.png</texture>
        </control>
    </controls>
</window>