            <animation effect="slide" time="300" start="0,0" end="600,0" acceleration="1.1" condition="!Skin.HasSetting(animated)">WindowClose</animation>
        </control>

        <!-- Uncomment this control to use a textbox for lyrics -->
        <control type="textbox" id="3">
            <description>textarea</description>
            <posx>220</posx>
            <posy>195</posy>
            <width>435</width>
            <height>320</height>
            <onup>3</onup>
            <ondown>3</ondown>
            <onleft>3</onleft>
            <onright>3</onright>
            <spinposx>410</spinposx>
            <spinposy>345</spinposy>
            <spincolor>ffffffff</spincolor>
            <textureup>scroll-up.png</textureup>
            <texturedown>scroll-down.png</texturedown>
            <textureupfocus>scroll-up-focus.gif</textureupfocus>
            <texturedownfocus>scroll-down-focus.gif</texturedownfocus>
            <font>font13</font>
            <textcolor>DDFFFFFF</textcolor>
            <animation effect="slide" time="500" start="600,0" end="0,0" acceleration="-1" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
            <animation effect="slide" time="300" start="0,0" end="600,0" acceleration="1.1" condition="!Skin.HasSetting(animated)">WindowClose</animation>
        </control>

        <!-- Uncomment this control to use a list for lyrics -->
        <control type="list" id="4">
            <description>lyrics list</description>
            <posx>220</posx>
            <posy>202</posy>
            <width>436</width>
            <height>299</height>
            <onleft>4</onleft>
            <onright>4</onright>
            <onup>4</onup>
            <ondown>4</ondown>
            <spinposx>410</spinposx>
            <spinposy>345</spinposy>
            <spincolor>ddffffff</spincolor>
            <textureup>scroll-up.png</textureup>
            <texturedown>scroll-down.png</texturedown>
            <textureupfocus>scroll-up-focus.gif</textureupfocus>
            <texturedownfocus>scroll-down-focus.gif</texturedownfocus>
            <texturefocus>list-focus.png</texturefocus>
            <texturenofocus>-</texturenofocus>
            <image>-</image>
			<itemwidth>0</itemwidth>
			<itemheight>0</itemheight>
            <textureheight>22</textureheight>
            <spacebetweenitems>1</spacebetweenitems>  
            <font>font13</font>
            <selectedcolor>ffffffff</selectedcolor>
            <textcolor>DDFFFFFF</textcolor>
            <textcolor2>ddffffff</textcolor2>
            <colordiffuse>ffffffff</colordiffuse>
            <suffix> |</suffix>
            <textxoff>3</textxoff>
            <textxoff2>0</textxoff2>
            <aligny>center</aligny>
			<textxoff>0</textxoff>
            <animation effect="slide" time="500" start="600,0" end="0,0" acceleration="-1" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
            <animation effect="slide" time="300" start="0,0" end="600,0" acceleration="1.1" condition="!Skin.HasSetting(animated)">WindowClose</animation>
        </control>

