            <selectedcolor>ffffffff</selectedcolor>
            <textcolor>DDFFFFFF</textcolor>
            <textcolor2>ddffffff</textcolor2>
            <colordiffuse>ffffffff</colordiffuse>
            <suffix> |</suffix>
