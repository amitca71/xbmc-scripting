            <animation effect="fade" time="1000">WindowOpen</animation>
            <control type="group">
                <posx>40</posx>
                <posy>350</posy>
                <control type="image" id="200">
                    <description>Dialog Header</description>
                    <posx>40</posx>
                    <posy>350</posy>
                    <width>120</width>
                    <height>100</height>
                    <texture>dialog_top.png</texture>
                    <animation effect="slide" time="500" start="-200,0" end="0,0" acceleration="-1" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
                    <animation effect="slide" time="300" start="0,0" end="-200,0" acceleration="1.1" condition="!Skin.HasSetting(animated)">WindowClose</animation>
                </control>
                <control type="image" id="201">
                    <description>Dialog Text Area</description>
                    <posx>56</posx>
                    <posy>372</posy>
                    <width>120</width>
                    <height>150</height>
                    <colordiffuse>BBFFFFFF</colordiffuse>
                    <texture border="10">dialog_middle.png</texture>
                    <animation effect="slide" time="500" start="-200,0" end="0,0" acceleration="-1" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
                    <animation effect="slide" time="300" start="0,0" end="-200,0" acceleration="1.1" condition="!Skin.HasSetting(animated)">WindowClose</animation>
