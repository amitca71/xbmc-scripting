<window>

<!--
	You may move, add or delete any controls you want as long as they're not Required.
	With one exception, required controls <description> tag and <type> tag must NOT be changed,
	the <type> tag for labels may be changed to button. This allows <shadowcolor> tag to be used.
	(if changing <type>label</type> to <type>button</type>, set <texturenofocus>-</texturenofocus>)
	There are four special controls that are displayed based on if media is playing. You may set their
	tag <visible>false</visible> if you don't want them, but DO NOT delete them.
	<include> tags work and the reference.xml file will be used for any missing tags.
-->

	<defaultcontrol always="true">10</defaultcontrol>
	<resolution>PAL16x9</resolution>

	<controls>

		<control>
			<description>background image</description>
			<type>image</type>
			<id>1</id>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>\background_16x9.png</texture>
		</control>

		<control>
			<description>xbox media center label</description>
			<type>label</type>
			<id>1</id>
			<width>200</width>
			<posx>200</posx>
			<posy>63</posy>
			<align>right</align>
			<label>xbox media center</label>
			<font>special12</font>
		</control>

		<control>
			<description>contentpanel slice</description>
			<type>image</type>
			<id>1</id>
			<posx>160</posx>
			<posy>108</posy>
			<width>64</width>
			<height>468</height>
			<texture>contentpanel_left.png</texture>
			<include>contentpanelslide</include>
		</control>

		<control>
			<description>contentpanel slice</description>
			<type>image</type>
			<id>1</id>
			<posx>224</posx>
			<posy>108</posy>
			<width>500</width>
			<height>468</height>
			<texture>contentpanel.png</texture>
			<include>contentpanelslide</include>
		</control>

		<control>
			<description>q backdrop image</description>
			<type>image</type>
			<id>1</id>
			<posx>260</posx>
			<posy>130</posy>
			<width>375</width>
			<height>373</height>
			<aspectratio>keep</aspectratio>
			<texture>\q_backdrop.png</texture>
		</control>

		<!-- labels -->
		
		<!-- ** Required ** Do not change <description> -->
		<control>
			<description>Title Label</description>
			<type>label</type>
			<id>1</id>
			<width>200</width>
			<posx>207</posx>
			<posy>63</posy>
			<align>left</align>
			<label>Apple Movie Trailers</label>
			<font>special13</font>
		</control>

		<!-- ** Required ** Do not change <description> -->
		<control>
			<description>Category Label</description>
			<type>label</type>
			<id>1</id>
			<posx>650</posx>
			<posy>63</posy>
			<width>300</width>
			<height>35</height>
			<align>right</align>
			<label>-</label>
			<font>special13</font>
		</control>
		
		<!-- Buttons -->

		<!-- ** Required ** Do not change <description> or <type> -->
		<control>
			<description>Newest Button</description>
			<type>button</type>
			<id>10</id>
			<label>Newest</label>
			<posx>50</posx>
			<posy>120</posy>
			<onleft>210</onleft>
			<onright>100</onright>
			<onup>60</onup>
			<ondown>20</ondown>
			<include>buttonpanelslide</include>
			<onclick>-</onclick>
		</control>

		<!-- ** Required ** Do not change <description> or <type> -->
		<control>
			<description>Exclusives Button</description>
			<type>button</type>
			<id>20</id>
			<label>Exclusives</label>
			<posx>50</posx>
			<posy>157</posy>
			<onleft>210</onleft>
			<onright>100</onright>
			<onup>10</onup>
			<ondown>30</ondown>
			<include>buttonpanelslide</include>
			<onclick>-</onclick>
		</control>

		<!-- ** Required ** Do not change <description> or <type> -->
		<control>
			<description>Genre Button</description>
			<type>button</type>
			<id>30</id>
			<label>Genre</label>
			<posx>50</posx>
			<posy>194</posy>
			<onleft>210</onleft>
			<onright>100</onright>
			<onup>20</onup>
			<ondown>40</ondown>
			<include>buttonpanelslide</include>
			<onclick>-</onclick>
		</control>

		<!-- ** Required ** Do not change <description> or <type> -->
		<control>
			<description>Search Button</description>
			<type>button</type>
			<id>40</id>
			<label>Search</label>
			<posx>50</posx>
			<posy>268</posy>
			<onleft>210</onleft>
			<onright>100</onright>
			<onup>30</onup>
			<ondown>50</ondown>
			<include>buttonpanelslide</include>
			<onclick>-</onclick>
		</control>
		
		<!-- ** Required ** Do not change <description> or <type> -->
		<control>
			<description>Settings Button</description>
			<type>button</type>
			<id>50</id>
			<label>Settings</label>
			<posx>50</posx>
			<posy>342</posy>
			<onleft>210</onleft>
			<onright>100</onright>
			<onup>40</onup>
			<ondown>60</ondown>
			<include>buttonpanelslide</include>
			<onclick>-</onclick>
		</control>

		<!-- ** Required ** Do not change <description> or <type> -->
		<control>
			<description>Update Button</description>
			<type>button</type>
			<id>60</id>
			<label>Update All</label>
			<posx>50</posx>
			<posy>465</posy>
			<onleft>60</onleft>
			<onright>60</onright>
			<onup>50</onup>
			<ondown>10</ondown>
			<texturefocus>\button-focus_arrows_16x9.png</texturefocus>
			<include>buttonpanelslide</include>
			<onclick>-</onclick>
		</control>

		<!-- list controls -->
		
		<!-- ** Required ** Do not change <description> or <type> -->
		<control>
			<description>Trailer List</description>
			<type>listcontrol</type>
			<id>100</id>
			<width>270</width>
			<height>235</height>
			<!--texturefocus>list-focus.png</texturefocus>
			<texturenofocus>list-nofocus.png</texturenofocus-->
			<image>-</image>
			<textxoff>0</textxoff>
			<onup>100</onup>
			<ondown>100</ondown>
			<onleft>10</onleft>
			<onright>110</onright>
			<visible>false</visible>
		</control>
		
		<!-- ** Required ** Do not change <description> or <type> -->
		<control>
			<description>Genre List</description>
			<type>listcontrol</type>
			<id>110</id>
			<!--texturefocus>list-focus.png</texturefocus>
			<texturenofocus>list-nofocus.png</texturenofocus-->
			<image>-</image>
			<textxoff>0</textxoff>
			<onup>110</onup>
			<ondown>110</ondown>
			<onleft>100</onleft>
			<onright>210</onright>
			<visible>false</visible>
		</control>

		<!-- info controls -->
		
		<!-- ** Required ** Do not change <description> or <type> -->
		<control>
			<description>Trailer Backdrop</description>
			<type>image</type>
			<id>200</id>
			<posx>498</posx>
			<posy>118</posy>
			<width>174</width>
			<height>254</height>
			<texture>\t_backdrop.png</texture>
			<aspectratio>keep</aspectratio>
			<!--visible>!Control.IsVisible(100)</visible-->
			<visible>false</visible>
		</control>

		<!-- ** Required ** Do not change <description> or <type> -->
		<control>
			<description>Trailer Thumbnail</description>
			<type>image</type>
			<id>201</id>
			<posx>500</posx>
			<posy>120</posy>
			<width>170</width>
			<height>250</height>
			<texture>-</texture>
			<aspectratio>keep</aspectratio>
			<!--visible>!Control.IsVisible(100)</visible-->
			<visible>false</visible>
		</control>

		<!-- ** Required ** Do not change <description> -->
		<control>
			<description>Trailer Title</description>
			<type>label</type>
			<id>205</id>
			<width>250</width>
			<posx>211</posx>
			<posy>370</posy>
			<align>left</align>
			<label>-</label>
			<font>special13</font>
			<!--visible>!Control.IsVisible(100)</visible-->
			<visible>false</visible>
		</control>

		<!-- ** Required ** Do not change <description> or <type> -->
		<control>
			<description>Trailer Info</description>
			<type>textbox</type>
			<id>210</id>
			<posx>211</posx>
			<posy>400</posy>
			<width>445</width>
			<height>153</height>
			<font>font12</font>
			<onup>210</onup>
			<ondown>210</ondown>
			<onleft>110</onleft>
			<onright>10</onright>
			<include>controldefaults</include>
			<!--visible>!Control.IsVisible(100)</visible-->
			<visible>false</visible>
		</control>

		<!-- special controls for media playing info -->
		
		<!-- ** Required ** Do not change <description> or <type> -->
		<control>
			<description>X Button On</description>
			<id>300</id>
			<type>image</type>
			<posx>82</posx>
			<posy>525</posy>
			<width>21</width>
			<height>21</height>
			<texture>-</texture>
			<!--visible>Player.HasMedia</visible-->
			<visible>false</visible>
		</control>

		<!-- ** Required ** Do not change <description> or <type> -->
		<control>
			<id>301</id>
			<description>X Button Off</description>
			<type>image</type>
			<posx>82</posx>
			<posy>525</posy>
			<width>21</width>
			<height>21</height>
			<texture>-</texture>
			<!--visible>!Player.Hasmedia</visible-->
			<visible>false</visible>
		</control>

		<!-- ** Required ** Do not change <description> -->
		<control>
			<description>Full-Screen Visualisation Label</description>
			<id>302</id>
			<type>label</type>
			<font>font12</font>
			<posx>115</posx>
			<posy>528</posy>
			<width>250</width>
			<label>Full Screen Visualization</label>
			<align>left</align>
			<textcolor>FFFFFFFF</textcolor>
			<shadowcolor>FF000000</shadowcolor>
			<!--visible>Player.HasAudio</visible-->
			<visible>false</visible>
		</control>

		<!-- ** Required ** Do not change <description> -->
		<control>
			<description>Full-Screen Video Label</description>
			<id>303</id>
			<type>label</type>
			<font>font12</font>
			<posx>50</posx>
			<posy>500</posy>
			<label>Full Screen Video</label>
			<align>center</align>
			<textcolor>FFFFFFFF</textcolor>
			<shadowcolor>FF000000</shadowcolor>
			<!--visible>Player.HasVideo</visible-->
			<visible>false</visible>
		</control>


	</controls>

</window>
