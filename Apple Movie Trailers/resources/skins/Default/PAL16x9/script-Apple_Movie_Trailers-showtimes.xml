<window>
    <defaultcontrol>100</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>161</posx>
		<posy>100</posy>
	</coordinates>
	<controls>
		<!-- ** Optional ** -->
		<control type="image">
			<description>Background Image</description>
			<posx>1</posx>
			<posy>18</posy>
			<width>400</width>
			<height>370</height>
			<texture>amt-dialog-panel.png</texture>
		</control>
		<!-- ** Required ** Do not change <description> or <type> -->
		<control type="label" id="20">
			<description>Showtimes Movie Label</description>
			<posx>20</posx>
			<posy>28</posy>
			<width>350</width>
			<align>left</align>
			<font>font12</font>
            <textcolor>FFFFFFFF</textcolor>
		</control>
		<!-- ** Required ** Do not change <description> or <type> -->
		<control type="label" id="30">
			<description>Showtimes Date Label</description>
			<posx>20</posx>
			<posy>50</posy>
			<width>250</width>
			<align>left</align>
			<font>font10</font>
			<textcolor>DDced8da</textcolor>
		</control>
		<!-- ** Required ** Do not change <description> or <type> -->
		<control type="label" id="40">
			<description>Showtimes Location Label</description>
			<posx>390</posx>
			<posy>50</posy>
			<width>150</width>
			<align>right</align>
			<font>font10</font>
			<textcolor>DDced8da</textcolor>
		</control>
		<!-- ** Required ** Do not change <id> or <type> -->
		<control type="list" id="100">
			<description>Team Credits List</description>
			<posx>20</posx>
			<posy>82</posy>
			<width>370</width>
			<height>270</height>
			<scrolltime>200</scrolltime>
            <onup>100</onup>
            <ondown>100</ondown>
			<itemlayout height="45">
				<control type="image">
					<width>370</width>
					<height>42</height>
					<posx>0</posx>
					<posy>0</posy>
					<texture border="5">amt-input-nofocus.png</texture>
				</control>
				<control type="label">
					<posx>5</posx>
					<posy>1</posy>
					<width>360</width>
					<height>18</height>
					<font>font10</font>
                    <textcolor>FFFFFFFF</textcolor>
					<aligny>center</aligny>
					<align>left</align>
					<info>ListItem.Label</info>
				</control>
				<control type="label">
					<posx>5</posx>
					<posy>21</posy>
					<width>360</width>
					<height>18</height>
					<font>font10</font>
                    <textcolor>60FFFFFF</textcolor>
					<aligny>center</aligny>
					<align>left</align>
					<info>ListItem.Label2</info>
				</control>
			</itemlayout>
			<focusedlayout height="45">
				<control type="image">
					<width>370</width>
					<height>42</height>
					<posx>0</posx>
					<posy>0</posy>
					<texture border="5">amt-input-focus.png</texture>
				</control>
				<control type="label">
					<posx>5</posx>
					<posy>1</posy>
					<width>360</width>
					<height>18</height>
					<font>font10</font>
                    <textcolor>FFFFFFFF</textcolor>
					<aligny>center</aligny>
					<align>left</align>
					<info>ListItem.Label</info>
				</control>
				<control type="label">
					<posx>5</posx>
					<posy>21</posy>
					<width>360</width>
					<height>18</height>
					<font>font10</font>
                    <textcolor>60FFFFFF</textcolor>
					<aligny>center</aligny>
					<align>left</align>
					<info>ListItem.Label2</info>
				</control>
			</focusedlayout>
		</control>
	</controls>
</window>