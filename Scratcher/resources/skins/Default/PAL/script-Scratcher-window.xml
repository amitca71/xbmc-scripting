<window>
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="false">101</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
	<controls>
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>64</width>
            <height>64</height>
            <texture>script-logo.png</texture>
        </control>
		<control type="label" id="1">
			<description>Script Name</description>
			<posx>64</posx>
			<posy>0</posy>
            <height>64</height>
            <aligny>center</aligny>
		</control>
		<control type="grouplist" id="9000">
			<posx>10</posx>
			<posy>64</posy>
            <width>100</width>
            <onleft>50</onleft>
            <onright>50</onright>
            <onup>9000</onup>
            <ondown>9000</ondown>
            <control type="button" id="101">
                <description>Open</description>
            </control>
            <control type="button" id="102">
                <description>Save</description>
            </control>
        </control>
    	<control type="group">
            <description>text area and scrollbar</description>
            <posx>120</posx>
            <posy>64</posy>
    		<control type="list" id="50">
    			<description>textarea</description>
    			<width>570</width>
    			<height>420</height>
    			<onleft>9000</onleft>
    			<onright>60</onright>
    			<onup>50</onup>
    			<ondown>50</ondown>
    			<viewtype label="535">list</viewtype>
    			<pagecontrol>60</pagecontrol>
    			<scrolltime>200</scrolltime>
    			<itemlayout height="20">
    				<control type="label">
                        <description>line number</description>
    					<posx>35</posx>
    					<posy>0</posy>
    					<width>35</width>
    					<height>20</height>
    					<aligny>center</aligny>
    					<align>right</align>
                        <label>[B]$INFO[ListItem.Label2][/B]</label>
    				</control>
    				<control type="label">
    					<posx>45</posx>
    					<posy>0</posy>
    					<width>515</width>
    					<height>20</height>
    					<aligny>center</aligny>
    					<align>left</align>
    					<info>ListItem.Label</info>
    				</control>
    			</itemlayout>
    			<focusedlayout height="20">
    				<control type="image">
    					<posx>40</posx>
    					<posy>0</posy>
    					<width>525</width>
    					<height>20</height>
    					<visible>Control.HasFocus(50)</visible>
    					<texture>list-focus.png</texture>
    				</control>
    				<control type="label">
                        <description>line number</description>
    					<posx>35</posx>
    					<posy>0</posy>
    					<width>35</width>
    					<height>20</height>
    					<aligny>center</aligny>
    					<align>right</align>
                        <label>[B]$INFO[ListItem.Label2][/B]</label>
    				</control>
    				<control type="label">
    					<posx>45</posx>
    					<posy>0</posy>
    					<width>515</width>
    					<height>20</height>
    					<aligny>center</aligny>
    					<align>left</align>
    					<info>ListItem.Label</info>
    				</control>
    			</focusedlayout>
    		</control>
    		<control type="button">
    			<posx>570</posx>
                <posy>0</posy>
                <width>20</width>
    			<height>20</height>
    			<onclick>PageUp(60)</onclick>
    			<texturefocus border="4">scrollbar_arrow_up_focus.png</texturefocus>
    			<texturenofocus border="4">scrollbar_arrow_up.png</texturenofocus>
    			<visible>Control.IsVisible(60)</visible>
    		</control>
    		<control type="button">
    			<posx>570</posx>
    			<posy>400</posy>
                <width>20</width>
    			<height>20</height>
    			<onclick>PageDown(60)</onclick>
    			<texturefocus border="4">scrollbar_arrow_down_focus.png</texturefocus>
    			<texturenofocus border="4">scrollbar_arrow_down.png</texturenofocus>
    			<visible>Control.IsVisible(60)</visible>
    		</control>
    		<control type="scrollbar" id="60">
    			<posx>570</posx>
    			<posy>20</posy>
                <width>20</width>
    			<height>380</height>
    			<texturesliderbackground border="4">scrollbar_background.png</texturesliderbackground>
    			<texturesliderbar border="4">scrollbar_bar.png</texturesliderbar>
    			<texturesliderbarfocus border="4">scrollbar_bar_focus.png</texturesliderbarfocus>
    			<textureslidernib>-</textureslidernib>
    			<textureslidernibfocus>-</textureslidernibfocus>
    			<onleft>50</onleft>
    			<onright>9000</onright>
    			<showonepage>false</showonepage>
    			<orientation>vertical</orientation>
    		</control>
    	</control>
    </controls>
</window>