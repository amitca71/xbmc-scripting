			<posx>500</posx>
			<posy>120</posy>
			<width>170</width>
			<height>250</height>
			<texture>-</texture>
			<aspectratio>keep</aspectratio>
			<!--visible>!Control.IsVisible(100)</visible-->
			<visible>false</visible>
		</control>

		<control>
			<description>Trailer Title</description>
			<type>label</type>
			<id>205</id>
			<width>250</width>
			<posx>211</posx>
			<posy>370</posy>
			<align>left</align>
			<label>Movie Title Goes Here</label>
			<font>special13</font>
			<!--visible>!Control.IsVisible(100)</visible-->
			<visible>false</visible>
		</control>

		<control>
			<description>Trailer Info</description>
			<type>textbox</type>
			<id>210</id>
			<posx>211</posx>
			<posy>400</posy>
			<width>445</width>
			<height>150</height>
			<font>font12</font>
			<onup>210</onup>
			<ondown>210</ondown>
			<onleft>100</onleft>
			<onright>10</onright>
			<include>controldefaults</include>
