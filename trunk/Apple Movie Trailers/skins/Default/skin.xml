<window>

	<id>1156</id>
	<allowoverlay>no</allowoverlay>
	<defaultcontrol always="false">10</defaultcontrol>
	<resolution>PAL</resolution>

	<controls>

		<control>
			<description>background image</description>
			<type>image</type>
			<id>1</id>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>background-videos.png</texture>
		</control>

		<control>
			<description>xbox media center label</description>
			<type>label</type>
			<id>1</id>
			<width>200</width>
			<posx>200</posx>
			<posy>63</posy>
			<align>right</align>
			<label>xbox media center</label>
			<font>special12</font>
		</control>

		<control>
			<description>description label</description>
			<type>label</type>
			<id>1</id>
			<width>150</width>
			<posx>207</posx>
			<posy>63</posy>
			<align>left</align>
			<label>Apple.com Trailers</label>
			<font>special13</font>
		</control>

		<control>
			<description>Category Label</description>
			<type>label</type>
			<id>5</id>
			<posx>670</posx>
			<posy>63</posy>
			<width>250</width>
			<height>35</height>
			<align>right</align>
			<label>Exclusives</label>
			<font>special13</font>
		</control>
		
		<control>
			<description>contentpanel slice</description>
			<type>image</type>
			<id>0</id>
			<posx>160</posx>
			<posy>108</posy>
			<width>64</width>
			<height>468</height>
			<texture>contentpanel_left.png</texture>
			<include>contentpanelslide</include>
		</control>

		<control>
			<description>contentpanel slice</description>
			<type>image</type>
			<id>0</id>
			<posx>224</posx>
			<posy>108</posy>
			<width>500</width>
			<height>468</height>
			<texture>contentpanel.png</texture>
			<include>contentpanelslide</include>
		</control>

		<control>
			<description>Exclusives Button</description>
			<type>button</type>
			<id>10</id>
			<label>Exclusives</label>
			<posx>50</posx>
			<posy>120</posy>
			<onleft>100</onleft>
			<onright>100</onright>
			<onup>50</onup>
			<ondown>20</ondown>
			<include>buttonpanelslide</include>
			<onclick>XBMC.ActivateWindow(34)</onclick>
		</control>

		<control>
			<description>Newest Button</description>
			<type>button</type>
			<id>20</id>
			<label>Newest</label>
			<posx>50</posx>
			<posy>157</posy>
			<onleft>100</onleft>
			<onright>100</onright>
			<onup>10</onup>
			<!-- <ondown>30</ondown> -->
			<ondown>50</ondown>
			<include>buttonpanelslide</include>
			<onclick>XBMC.ActivateWindow(34)</onclick>
		</control>

