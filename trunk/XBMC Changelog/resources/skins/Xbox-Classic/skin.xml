<window id="3000">

 <defaultcontrol>200</defaultcontrol>
 <resolution>PAL</resolution>
 <useincludes>true</useincludes>

	<controls>
		<control type="image" id="1">
			<description>Black Back</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>black.png</texture>
		</control>
		<control type="image" id="1">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>background.png</texture>
		</control>
		<include>XBMC_Logo_Image</include>
		<control type="button" id="10">
			<description>Window Heading</description>
			<posx>240</posx>
			<posy>70</posy>
			<width>450</width>
			<label>XBMC Changelog</label>
			<font>font14</font>
            <texturenofocus>-</texturenofocus>
			<include>textcolor-yellow</include>
			<include>shadow-black</include>
		</control>
		<control type="button">
			<description>date label</description>
			<posx>370</posx>
			<posy>70</posy>
			<align>right</align>
			<label>$INFO[System.Date]</label>
			<width>300</width>
			<font>font14</font>
            <texturenofocus>-</texturenofocus>
			<include>textcolor-yellow</include>
			<include>shadow-black</include>
		</control>
		<!-- *** Required *** Do not change <description> or type -->
        <control type="textbox" id="200">
			<description>textarea</description>
			<posx>50</posx>
			<posy>120</posy>
			<width>630</width>
			<height>425</height>
		</control>
	</controls>

</window>

