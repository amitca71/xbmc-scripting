<window>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
		<!-- START: Images -->
		<control type="image">
			<description>Background Image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>background.png</texture>
		</control>

		<control type="image">
			<description>Sveriges Television Logo</description>
			<posx>10</posx>
			<posy>-10</posy>
			<width>177</width>
			<height>125</height>
			<texture>svt-fargstor.png</texture>
		</control>
		<!-- END: Images -->

		<!-- START: Lists -->
		<control type="list" id="50">
			<description>Content List</description>
			<posx>190</posx>
			<posy>100</posy>
			<width>645</width>
			<height>425</height>
			<onleft>10</onleft>
			<onright>60</onright>
			<onup>50</onup>
			<ondown>50</ondown>
			<viewtype label="535">list</viewtype>
			<pagecontrol>60</pagecontrol>
			<scrolltime>200</scrolltime>
			<itemlayout height="27">
				<control type="image">
					<width>510</width>
					<height>25</height>
					<posx>0</posx>
					<posy>0</posy>
					<texture>list-nofocus.png</texture>
				</control>
				<control type="image">
					<posx>5</posx>
					<posy>3</posy>
					<width>20</width>
					<height>20</height>
					<info>ListItem.Icon</info>
				</control>
				<control type="label">
					<posx>30</posx>
					<posy>2</posy>
					<width>510</width>
					<height>22</height>
					<font>font13</font>
					<selectedcolor>FFe2ff43</selectedcolor>
					<align>left</align>
					<info>ListItem.Label</info>
				</control>
				<control type="label">
					<posx>430</posx>
					<posy>2</posy>
					<width>510</width>
					<height>22</height>
					<font>font13</font>
					<include>listselectedcolor</include>
					<selectedcolor>FFe2ff43</selectedcolor>
					<align>right</align>
					<info>ListItem.Label2</info>
				</control>
			</itemlayout>
			<focusedlayout height="27">
				<control type="image">
					<width>510</width>
					<height>25</height>
					<posx>0</posx>
					<posy>0</posy>
					<visible>!Control.HasFocus(50)</visible>
					<texture>list-nofocus.png</texture>
				</control>
				<control type="image">
					<width>510</width>
					<height>25</height>
					<posx>0</posx>
					<posy>0</posy>
					<visible>Control.HasFocus(50)</visible>
					<texture>list-focus.png</texture>
				</control>
				<control type="image">
					<posx>5</posx>
					<posy>3</posy>
					<width>20</width>
					<height>20</height>
					<info>ListItem.Icon</info>
				</control>
				<control type="label">
					<posx>30</posx>
					<posy>2</posy>
					<width>380</width>
					<height>22</height>
					<font>font13</font>
					<selectedcolor>FFe2ff43</selectedcolor>
					<align>left</align>
					<info>ListItem.Label</info>
				</control>
				<control type="label">
					<posx>430</posx>
					<posy>2</posy>
					<width>300</width>
					<height>22</height>
					<font>font13</font>
					<selectedcolor>FFe2ff43</selectedcolor>
					<textcolor>60ffffff</textcolor>
					<align>right</align>
					<info>ListItem.Label2</info>
				</control>
			</focusedlayout>
		</control>

		<control type="scrollbar" id="60">
			<posx>703</posx>
			<posy>89</posy>
			<width>17</width>
			<height>446</height>
			<texturesliderbackground border="4">scrollbar_background.png</texturesliderbackground>
			<texturesliderbar border="3">scrollbar_bar.png</texturesliderbar>
			<texturesliderbarfocus border="3">scrollbar_bar_focus.png</texturesliderbarfocus>
			<textureslidernib>scrollbar_nib.png</textureslidernib>
			<textureslidernibfocus>scrollbar_nib_focus.png</textureslidernibfocus>
			<onleft>50</onleft>
			<onright>69</onright>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
		</control>
		<!-- END: Lists -->

		<!-- START: Bttons -->
		<control type="button" id="10">
			<description>About Button</description>
			<label>Om</label>
			<posx>20</posx>
			<posy>100</posy>
			<width>150</width>
			<height>30</height>
			<onright>50</onright>
			<onup>11</onup>
			<ondown>11</ondown>
			<texturefocus>button-focus.png</texturefocus>
			<texturenofocus>button-nofocus.png</texturenofocus>
			<textcolor>ffffffff</textcolor>
			<disabledcolor>60ffffff</disabledcolor>
			<textoffsetx>17</textoffsetx>
			<aligny>center</aligny>
		</control>

		<control type="button" id="11">
			<description>Search Button</description>
			<label>Sök</label>
			<posx>20</posx>
			<posy>130</posy>
			<width>150</width>
			<height>30</height>
			<onright>50</onright>
			<onup>10</onup>
			<ondown>10</ondown>
			<texturefocus>button-focus.png</texturefocus>
			<texturenofocus>button-nofocus.png</texturenofocus>
			<textcolor>ffffffff</textcolor>
			<disabledcolor>60ffffff</disabledcolor>
			<textoffsetx>17</textoffsetx>
			<aligny>center</aligny>
		</control>
		<!-- END: Buttons -->
	</controls>
</window>
