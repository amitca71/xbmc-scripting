<window>
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="false">50</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>300</posx>
        <posy>250</posy>
    </coordinates>
	<controls>
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>150</width>
            <height>5</height>
            <texture>script-popupmenu-top.png</texture>
        </control>
		<control type="list" id="50">
			<posx>0</posx>
			<posy>5</posy>
            <width>150</width>
            <height>200</height>
			<onleft>50</onleft>
			<onright>50</onright>
			<onup>50</onup>
			<ondown>50</ondown>
            <itemlayout height="20">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>150</width>
                    <height>20</height>
                    <texture>script-popupmenu-item.png</texture>
                </control>
                <control type="label">
                    <posx>5</posx>
                    <posy>0</posy>
                    <width>140</width>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout height="20">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>150</width>
                    <height>20</height>
                    <texture>script-popupmenu-item-focus.png</texture>
                </control>
                <control type="label">
                    <posx>5</posx>
                    <posy>0</posy>
                    <width>140</width>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
        <control type="image">
            <posx>0</posx>
            <posy>200</posy>
            <width>150</width>
            <height>5</height>
            <texture>script-popupmenu-bottom.png</texture>
        </control>
    </controls>
</window>