<window>
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="false">50</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
	<controls>
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>250</width>
            <height>5</height>
            <texture>popupmenu-top.png</texture>
        </control>
		<control type="list" id="50">
			<posx>0</posx>
			<posy>0</posy>
            <width>250</width>
            <height>300</height>
			<onleft>50</onleft>
			<onright>50</onright>
			<onup>50</onup>
			<ondown>50</ondown>
            <itemlayout height="20">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>250</width>
                    <height>20</height>
                    <texture>popupmenu-item.png</texture>
                </control>
                <control type="label">
                    <posx>5</posx>
                    <posy>0</posy>
                    <width>240</width>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout height="20">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>250</width>
                    <height>20</height>
                    <texture>popupmenu-item-focus.png</texture>
                </control>
                <control type="label">
                    <posx>5</posx>
                    <posy>0</posy>
                    <width>240</width>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
        <control type="image">
            <posx>0</posx>
            <posy>300</posy>
            <width>250</width>
            <height>5</height>
            <texture>popupmenu-bottom.png</texture>
        </control>
    </controls>
</window>