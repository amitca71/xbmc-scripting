<window>

 <id>2004</id>
 <defaultcontrol>200</defaultcontrol>
 <resolution>PAL</resolution>

 <controls>

  <control type="image">
   <description>background image</description>
   <posx>0</posx>
   <posy>0</posy>
   <width>720</width>
   <height>576</height>
   <texture>default_background.png</texture>
  </control>

  <control type="image" id="1">
   <description>window background</description>
   <posx>10</posx>
   <posy>25</posy>
   <width>700</width>
   <height>526</height>
   <texture>bg_blue_blank.png</texture>
  </control>

  <control type="image" id="1">
   <description>window backdrop</description>
   <posx>30</posx>
   <posy>85</posy>
   <width>660</width>
   <height>410</height>
   <texture>window_background.png</texture>
  </control>

  <control type="image" id="1">
   <description>top bar</description>
   <posx>10</posx>
   <posy>10</posy>
   <width>700</width>
   <height>39</height>
   <texture>top_bar.png</texture>
  </control>

  <control type="image" id="1">
   <description>bottom bar</description>
   <posx>10</posx>
   <posy>527</posy>
   <width>700</width>
   <height>39</height>
   <texture>bottom_bar.png</texture>
  </control>

  <control type="label">
   <description>xbox media center label</description>
   <posx>28</posx>
   <posy>15</posy>
   <align>left</align>
   <label>XBMC: </label>
   <width>200</width>
   <font>font14</font>
   <include>textcolorlightgrey</include>
  </control>

  <control type="label">
   <description>description label</description>
   <posx>80</posx>
   <posy>15</posy>
   <align>left</align>
   <label>Changelog</label>
   <width>200</width>
   <font>font14</font>
   <include>textcolorlightgrey</include>
  </control>

  <control type="label">
   <description>date label</description>
   <posx>685</posx>
   <posy>30</posy>
   <label>$INFO[System.Date]</label>
   <align>right</align>
   <font>font10</font>
   <include>textcolorlightgrey</include>
  </control>

  <control type="label">
   <description>time label</description>
   <posx>685</posx>
   <posy>15</posy>
   <label>$INFO[System.Time]</label>
   <align>right</align>
   <font>font12</font>
   <include>textcolorlightgrey</include>
  </control>

  <control type="textbox" id="200">
   <description>textarea</description>
   <posx>40</posx>
   <posy>92</posy>
   <width>630</width>
   <height>410</height>
   <font>font12</font>
   <textcolor>FFFFFFFF</textcolor>
   <spinposx>410</spinposx>
   <spinposy>405</spinposy>
  </control>

 </controls>

</window>

