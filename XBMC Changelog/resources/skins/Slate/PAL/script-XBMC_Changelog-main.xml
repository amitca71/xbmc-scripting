<window type="dialog" id="3000">
  <defaultcontrol>90</defaultcontrol>
    <controls>
        <include>background</include>
        <include>content background</include>
        <include>content panel</include>
        <include>button background</include>
        <include>bottom button background</include>

     <control type="image">
      <description>Black Panel</description>
      <posx>31</posx>
      <posy>86</posy>
      <width>658</width>
      <height>408</height>
      <texture>dark_grey.png</texture>
      <animation effect="zoom" start="0" end="100" center="360,290" acceleration="-1" time="250" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
      <animation effect="zoom" start="100" end="0" center="360,290" acceleration="1" time="250" condition="!Skin.HasSetting(animated)">WindowClose</animation>
     </control>

     <control type="scrollbar" id="90">
      <posx>659</posx>
      <posy>150</posy>
      <width>20</width>
      <height>339</height>
      <texturesliderbackground border="3">scrollbar_background.png</texturesliderbackground>
      <texturesliderbar border="3">scrollbar_bar.png</texturesliderbar>
      <texturesliderbarfocus border="3">scrollbar_bar_focus.png</texturesliderbarfocus>
      <textureslidernib>scrollbar_nib.png</textureslidernib>
      <textureslidernibfocus>scrollbar_nib_focus.png</textureslidernibfocus>
      <onleft>50</onleft>
      <onright>9000</onright>
      <onup>50</onup>
      <ondown>50</ondown>
      <orientation>vertical</orientation>
      <include>weather fade</include>
     </control>

     <control type="label" id="4">
      <description>header</description>
      <posx>40</posx>
      <posy>115</posy>
      <width>615</width>
      <include>weather fade</include>
     </control>

     <control type="textbox" id="5">
      <description>textarea</description>
      <posx>40</posx>
      <posy>150</posy>
      <width>615</width>
      <height>335</height>
      <pagecontrol>90</pagecontrol>
      <include>weather fade</include>
     </control>

     <control type="label" id="10">
      <description>Scripts Output</description>
      <posx>75</posx>
      <posy>90</posy>
      <label>XBMC Changelog</label>
      <font>font14</font>
      <textcolor>FFffffff</textcolor>
      <include>weather fade</include>
     </control>
	<include>top bar</include>
	<include>bottom bar</include>
	<include>xbmc</include>
        <include>xbmc:</include>
        <include>menu time</include>
        <include>menu time2</include>
        <include>menu date</include>

     <control type="label" id="10">
      <description>Date label</description>
      <posx>670</posx>
      <posy>90</posy>
      <label>$INFO[System.Date]</label>
      <font>font14</font>
      <align>right</align>
      <textcolor>FFffffff</textcolor>
      <include>weather fade</include>
     </control>

    </controls>
</window>
