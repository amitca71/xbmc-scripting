<window>
<!--
	The <resolution> tag is used for the setCoordinateResolution() function.
	
	You may move, add or delete any controls you want as long as they're not Required.
	With one exception, required controls <description> tag and <type> tag MUST NOT be changed.
	The exception is <type>label</type> may be changed to <type>button</type>.	This allows 
	<shadowcolor> tag to be used. (set <texturenofocus>-</texturenofocus> if doing this.)
		
	<include> tags work and the defaults.xml file will be used for any missing tags.
	
	To use special images from the /gfx/ folder prepend a \. (eg <texture>\background.png</texture>)
	
-->


	<defaultcontrol>200</defaultcontrol>
	<resolution>PAL</resolution>

	<controls>
		<control type="image" id="1">
			<description>Black Back</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>black.png</texture>
		</control>
		<control type="image" id="1">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>background.png</texture>
		</control>
		<include>XBMC_Logo_Image</include>
		<control type="button" id="10">
			<description>Window Heading</description>
			<posx>240</posx>
			<posy>70</posy>
			<width>450</width>
			<label>XBMC Changelog</label>
			<font>font14</font>
            <texturenofocus>-</texturenofocus>
			<include>textcolor-yellow</include>
			<include>shadow-black</include>
		</control>
		<control type="button">
			<description>date label</description>
			<posx>370</posx>
			<posy>70</posy>
			<align>right</align>
			<label>$INFO[System.Date]</label>
			<width>300</width>
			<font>font14</font>
            <texturenofocus>-</texturenofocus>
			<include>textcolor-yellow</include>
			<include>shadow-black</include>
		</control>
		<!-- *** Required *** Do not change <description> or type -->
        <control type="textbox" id="200">
			<description>textarea</description>
			<posx>50</posx>
			<posy>120</posy>
			<width>630</width>
			<height>410</height>
		</control>
	</controls>

</window>

