<window id="3000">
	<defaultcontrol>5</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<include>Fade_Dialog_OpenClose_Animation</include>
	<controls>
		<control type="image" id="1">
			<description>Black Back</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>black.png</texture>
		</control>
		<control type="image" id="1">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>background.png</texture>
		</control>
		<include>XBMC_Logo_Image</include>
		<control type="label" id="10">
			<description>Window Heading</description>
			<posx>240</posx>
			<posy>70</posy>
			<width>450</width>
			<label>XBMC Changelog</label>
			<font>font14</font>
			<include>textcolor-yellow</include>
			<include>shadow-black</include>
		</control>
		<control type="label" id="11">
			<description>Date Label</description>
			<posx>670</posx>
			<posy>70</posy>
			<width>450</width>
            <label>$INFO[System.Date]</label>
			<font>font14</font>
            <align>right</align>
			<include>textcolor-yellow</include>
			<include>shadow-black</include>
		</control>
		<control type="label" id="4">
			<description>header label</description>
			<posx>40</posx>
			<posy>110</posy>
            <font>font13</font>
            <include>textcolor-green</include>
			<include>shadow-black</include>
		</control>
		<control type="textbox" id="5">
			<description>textarea</description>
			<posx>40</posx>
			<posy>150</posy>
			<width>640</width>
			<height>400</height>
			<spinposx>530</spinposx>
			<spinposy>390</spinposy>
		</control>
	</controls>
</window>